{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "declaration": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "lib/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
